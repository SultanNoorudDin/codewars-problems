// my code
int quadrant(int x, int y) {
  // Poveli!
  if(x>0 && y>0){
    return 1;
    }
  
  else if(x<0 && y>0){
    return 2;
    }
  
  else if(x<0 && y<0){
    return 3;
    }
  
  else if(x>0 && y<0){
    return 4;
  }
  return 0;
}

// better approach

int quadrant(int x, int y) {
  return x > 0 ? (y > 0 ? 1 : 4) : (y > 0 ? 2 : 3);
}
